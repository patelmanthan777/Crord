<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <LinearLayout
      android:id="@+id/record_overlay_buttons"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="end"
      android:gravity="center"
      android:padding="0dp"
      android:orientation="horizontal"
      android:background="@android:color/darker_gray"
      >
    <ImageButton
        android:id="@+id/record_overlay_cancel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_clear_white_24dp"
        android:background="@android:color/darker_gray"
        android:contentDescription="@string/cancel"
        />

    <me.s1rius.noone.ui.widget.ToggleImageView
        android:id="@+id/record_crop"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:checked="false"
        app:button="@drawable/ic_crop"
        android:background="@color/translate"/>

    <ImageButton
        android:id="@+id/record_overlay_start"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/darker_gray"
        android:src="@drawable/ic_videocam_white_24dp"
        android:contentDescription="@string/record"
        />
  </LinearLayout>
  <TextView
      android:id="@+id/record_overlay_recording"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:text="@string/record"
      android:textColor="#fff"
      android:textStyle="bold"
      android:textAllCaps="true"
      android:visibility="invisible"
      android:background="@android:color/darker_gray"
      />
  <View
      android:id="@+id/record_overlay_stop"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="invisible"
      />
</merge>
